<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="#ecf2fe"
    tools:context=".User.SignUp">

    <ScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/signUp_app_logo_image_view"
                android:layout_width="@dimen/_96sdp"
                android:layout_height="@dimen/_96sdp"
                android:layout_marginTop="28dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pnglogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_user_name_edit_txt"
                android:layout_width="@dimen/_225sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/add_order_edit_text_back"
                android:drawableEnd="@drawable/ic_username_icon"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/changa_medium"
                android:hint="@string/signup_user_name_hint"
                android:inputType="textPersonName"
                android:textColor="#005b96"
                android:textAlignment="viewEnd"
                android:textColorHint="#005b96"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUp_app_logo_image_view" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_user_password_edit_txt"
                android:layout_width="@dimen/_225sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/add_order_edit_text_back"
                android:drawableEnd="@drawable/ic_password_icon"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/changa_medium"
                android:hint="@string/signup_user_password_hint"
                android:inputType="textPassword"
                android:textAlignment="viewEnd"
                android:textColor="#005b96"
                android:textColorHint="#005b96"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUp_user_name_edit_txt" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_user_confirm_password_edit_txt"
                android:layout_width="@dimen/_225sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/add_order_edit_text_back"
                android:drawableEnd="@drawable/ic_password_icon"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/changa_medium"
                android:hint="@string/sign_up_confirm_password_hint"
                android:inputType="textPassword"
                android:textAlignment="viewEnd"
                android:textColor="#005b96"
                android:textColorHint="#005b96"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUp_user_password_edit_txt" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_user_primary_phone_edit_txt"
                android:layout_width="@dimen/_225sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/add_order_edit_text_back"
                android:drawableEnd="@drawable/ic_call_blue_32dp"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/changa_medium"
                android:hint="@string/signup_primary_phone_hint"
                android:inputType="number"
                android:textColor="#005b96"
                android:textColorHint="#005b96"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:letterSpacing="0.15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUp_user_confirm_password_edit_txt" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_user_secondary_phone_edit_txt"
                android:layout_width="@dimen/_225sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/add_order_edit_text_back"
                android:drawableEnd="@drawable/ic_call_blue_32dp"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/changa_medium"
                android:hint="@string/signup_secondary_phone_hint"
                android:inputType="number"
                android:textColor="#005b96"
                android:textColorHint="#005b96"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:letterSpacing="0.15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUp_user_primary_phone_edit_txt" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_user_address_edit_txt"
                android:layout_width="@dimen/_225sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/add_order_edit_text_back"
                android:drawableEnd="@drawable/ic_outline_location_on_24"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/changa_medium"
                android:hint="@string/signup_address_hint"
                android:inputType="text"
                android:textColor="#005b96"
                android:textColorHint="#005b96"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUp_user_secondary_phone_edit_txt" />

            <Button
                android:id="@+id/signUp_sign_up_btn"
                android:layout_width="@dimen/_225sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/btn_back"
                android:fontFamily="@font/tajwal"
                android:text="@string/signup_create_account"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintBottom_toTopOf="@id/signUp_login_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUp_user_address_edit_txt" />

            <TextView
                android:id="@+id/signUp_login_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/tajwal"
                android:text="@string/signup_or_login_text"
                android:textColor="#005b96"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/signUp_sign_up_btn"
                app:layout_constraintStart_toStartOf="@id/signUp_sign_up_btn" />

            <FrameLayout
                android:id="@+id/signUp_progressBarHolder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.4"
                android:animateLayoutChanges="true"
                android:background="#000000"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ProgressBar
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:indeterminate="true" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>