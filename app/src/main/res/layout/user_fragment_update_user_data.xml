<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf2fe"
    android:layoutDirection="ltr"
    tools:context=".Fragments.UpdateUserDataFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".User.SignUp">

        <ScrollView
            android:id="@+id/scroll_layout"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ecf2fe"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    app:layout_constraintBottom_toTopOf="@id/update_data_fragment_update_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/update_data_fragment_name_edit_txt"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/add_order_edit_text_back"
                        android:drawableEnd="@drawable/ic_username_icon"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/tajwal"
                        android:hint="@string/signup_user_name_hint"
                        android:inputType="textPersonName"
                        android:textAlignment="viewEnd"
                        android:textColor="#005b96"
                        android:textColorHint="#005b96"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/update_data_fragment_password_edit_txt"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@drawable/add_order_edit_text_back"
                        android:drawableEnd="@drawable/ic_password_icon"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/tajwal"
                        android:hint="@string/signup_user_password_hint"
                        android:inputType="textVisiblePassword"
                        android:letterSpacing="0.15"
                        android:textAlignment="viewEnd"
                        android:textColor="#005b96"
                        android:textColorHint="#005b96"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/update_data_fragment_name_edit_txt" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/update_data_fragment_primary_phone_edit_txt"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@drawable/add_order_edit_text_back"
                        android:drawableEnd="@drawable/ic_call_blue_32dp"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/tajwal"
                        android:hint="@string/signup_primary_phone_hint"
                        android:inputType="number"
                        android:letterSpacing="0.15"
                        android:textAlignment="viewEnd"
                        android:textColor="#005b96"
                        android:textColorHint="#005b96"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/update_data_fragment_password_edit_txt" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/update_data_fragment_secondary_phone_edit_txt"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@drawable/add_order_edit_text_back"
                        android:drawableEnd="@drawable/ic_call_blue_32dp"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/tajwal"
                        android:hint="@string/signup_secondary_phone_hint"
                        android:inputType="number"
                        android:letterSpacing="0.15"
                        android:textAlignment="viewEnd"
                        android:textColor="#005b96"
                        android:textColorHint="#005b96"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/update_data_fragment_primary_phone_edit_txt" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/update_data_fragment_address_edit_txt"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@drawable/add_order_edit_text_back"
                        android:drawableEnd="@drawable/ic_outline_location_on_24"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/tajwal"
                        android:hint="@string/signup_address_hint"
                        android:inputType="text"
                        android:textAlignment="viewEnd"
                        android:textColor="#005b96"
                        android:textColorHint="#005b96"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/update_data_fragment_secondary_phone_edit_txt" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/update_data_fragment_update_btn"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/add_order_btn_back"
                    android:fontFamily="@font/tajwal"
                    android:text="@string/update_data_txt"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <FrameLayout
                    android:id="@+id/update_data_fragment_progressBarHolder"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:alpha="0.4"
                    android:animateLayoutChanges="true"
                    android:background="#000000"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:indeterminate="true" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/update_data_fragment_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>