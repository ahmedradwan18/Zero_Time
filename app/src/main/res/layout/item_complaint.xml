<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ecf2fe"
    android:layoutDirection="ltr">

    <androidx.cardview.widget.CardView
        android:id="@+id/complaintsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:elevation="@dimen/_22sdp"
        app:cardBackgroundColor="#EFEEEE"
        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/complaints_cards_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/complaint_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="اسم العميل : "
                android:textColor="#005b96"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/changa_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/complaint_name_card"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/complaint_name_text"
                android:layout_marginTop="@dimen/_2sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/complaint_name_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="كريم القصاص"
                        android:textColor="#428bca"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/changa_medium"                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="@dimen/_4sdp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/complaint_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:text="هاتف العميل : "
                android:textColor="#005b96"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/changa_medium"
                app:layout_constraintTop_toBottomOf="@id/complaint_name_card"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_2sdp"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/complaint_phone_card"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/complaint_phone_text"
                android:layout_marginTop="@dimen/_2sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/complaint_phone_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01017268676"
                        android:textColor="#428bca"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/changa_medium"                        android:letterSpacing="0.15"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="@dimen/_4sdp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/complaint_complaint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:text="نص الشكوى : "
                android:textColor="#005b96"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/changa_medium"
                app:layout_constraintTop_toBottomOf="@id/complaint_phone_card"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_2sdp"
                />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/complaint_complaint_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/complaint_complaint_text"
                android:layout_marginTop="@dimen/_2sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/complaint_complaint_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="الشكوى لغير الله مذله"
                        android:textColor="#428bca"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginStart="@dimen/_8sdp"

                        android:fontFamily="@font/changa_medium"                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="@dimen/_4sdp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/complaint_complaint_card"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_4sdp">
                <TextView
                    android:id="@+id/complaint_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sat, 19 Sep 2020, 12:15:00"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/tajwal"                    android:padding="@dimen/_4sdp"
                    android:textColor="#FFFFFF"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>